{
  "name": "@onekeyfe/hardware-js-sdk",
  "description": "hardware js-sdk",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OneKeyHQ/hardware-js-sdk.git"
  },
  "author": "OneKey",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/connect-examples/expo-example",
      "packages/connect-examples/electron-example"
    ],
    "nohoist": [
      "**/electron",
      "**/electron/**",
      "**/@electron",
      "**/@electron/**"
    ]
  },
  "scripts": {
    "bootstrap": "npx patch-package && lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean --yes",
    "clean-workspace": "yarn clean && lerna run clean",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "test": "lerna run test",
    "setup": "yarn && yarn bootstrap && yarn build",
    "publish-packages": "lerna publish from-package",
    "update-protobuf": "lerna run update:protobuf --scope=@onekeyfe/hd-transport",
    "update-version": "lerna version --no-git-tag-version",
    "example": "cd ./packages/connect-examples/expo-example && yarn start",
    "example:desktop": "cd ./packages/connect-examples/electron-example && yarn dev",
    "build:example:desktop": "cd ./packages/connect-examples/electron-example && yarn make",
    "dev:web": "cd ./packages/hd-web-sdk && yarn dev",
    "dev:ble": "cd ./packages/hd-ble-sdk && yarn dev",
    "dev:core": "cd ./packages/core && yarn dev",
    "dev:transport": "cd ./packages/hd-transport && yarn dev",
    "dev:transport-http": "cd ./packages/hd-transport-web && yarn dev",
    "dev:transport-rn": "cd ./packages/hd-transport-react-native && yarn dev",
    "dev:transport-lowlevel": "cd ./packages/hd-transport-lowlevel && yarn dev",
    "dev:shared": "cd ./packages/shared && yarn dev",
    "debug:watcher": "node ./scripts/monitor.js"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.2",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "^27.5.1",
    "@types/node": "^18.18.8",
    "@types/shelljs": "^0.8.11",
    "babel-jest": "^28.1.3",
    "babel-loader": "^8.2.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "eslint-config-wesbos": "3.2.3",
    "eslint-plugin-jest": "^26.6.0",
    "husky": "^9.1.6",
    "jest": "^28.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^2.7.1",
    "prettier-eslint": "^14.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.73.0",
    "rollup-plugin-dts": "^4.2.1",
    "shelljs": "0.8.5",
    "tsconfig-paths": "^4.0.0",
    "typescript": "5.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "version": "0.0.0"
}
