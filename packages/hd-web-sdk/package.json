{
  "name": "@onekeyfe/hd-web-sdk",
  "version": "1.0.0",
  "author": "OneKey",
  "homepage": "https://github.com/OneKeyHQ/hardware-js-sdk#readme",
  "license": "ISC",
  "type": "commonjs",
  "main": "build/onekey-js-sdk.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "rimraf build && TS_NODE_PROJECT=\"../../tsconfig.webpack.json\" webpack --config ./webpack/dev.webpack.config.ts",
    "build:iframe": "rimraf build && TS_NODE_PROJECT=\"../../tsconfig.webpack.json\" webpack --config ./webpack/iframe.webpack.config.ts",
    "build:lib": "rimraf ./dist && tsc --build tsconfig.json",
    "build:sdk": "rimraf build && TS_NODE_PROJECT=\"../../tsconfig.webpack.json\" webpack --config ./webpack/prod.webpack.config.ts",
    "build": "yarn build:lib && yarn build:iframe && yarn build:sdk",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "echo \"Error: run tests from root\" && exit 1"
  },
  "dependencies": {
    "@onekeyfe/cross-inpage-provider-core": "^0.0.13"
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "@types/webpack": "^5.28.0",
    "@types/webpack-plugin-serve": "^1.4.2",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "es6-promise": "^4.2.8",
    "events": "^3.3.0",
    "html-webpack-plugin": "^5.5.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "terser-webpack-plugin": "^5.3.1",
    "util": "^0.12.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-plugin-serve": "^1.6.0"
  }
}
