{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "esModuleInterop": true,
    "module": "esnext",
    "allowJs": true // Seems to be needed for index.js
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/preload.ts"
  ],
  "exclude": [
    "node_modules",
    "web-build/**/*",
    "out/**/*",
    "dist/**/*",
    "public/**/*"
  ]
}